---
import Icon from "astro-icon";
export type Link = {
  url: string;
  icon: string;
  newTab?: boolean;
};

export interface Props {
  links: Array<Link>;
}

const { links } = Astro.props;
---

<nav>
  <div id="wrapper">
    {
      links
        .filter((link) => link.url !== "")
        .map((link) => (
          <a
            href={link.url}
            target={link.newTab ? "_blank" : null}
            title={link.icon}
          >
            <Icon pack="mdi" name={link.icon} />
          </a>
        ))
    }
  </div>
</nav>

<style>
  nav {
    width: 100%;
    background: var(--ayo-gradient);
  }
  nav a {
    text-decoration: none;
  }
  nav a:hover svg {
    color: var(--color-brand-complement);
  }
  nav a svg {
    color: var(--color-bg);
    width: 1rem;
    padding: 1rem;
  }
  #wrapper {
    max-width: var(--content-width);
    margin: 0 auto;
    text-align: right;
  }
</style>
